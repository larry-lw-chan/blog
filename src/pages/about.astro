---
import BaseLayout from "../layouts/BaseLayout.astro";

const identity = {
  firstName: "Larry LW Chan",
  country: "USA",
  occupation: "Full Stack Developer / Guitarist",
  hobbies: ["photography", "music", "video games"],
};

const skills = [
  "HTML",
  "CSS",
  "JavaScript/Typescript",
  "React",
  "Astro",
  "Python",
  "Go",
  "C#",
];

const white = "#fff";
---

<BaseLayout pageTitle="About Me">
  <meta name="description" content="About Me Page" slot="meta" />

  <h1>About Me</h1>
  <p>Here are a few facts about me:</p>
  <ul>
    <li>My name is {identity.firstName}.</li>
    <li>I live in {identity.country} and I work as a {identity.occupation}.</li>
    {
      identity.hobbies.length >= 2 && (
        <li>
          Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}
        </li>
      )
    }
  </ul>
  <p>My skills are:</p>
  <ul class="skills">
    {
      skills.map((skill) => (
        <li>
          <mark>{skill}</mark>
        </li>
      ))
    }
  </ul>
</BaseLayout>

<style define:vars={{ white }}>
  .skills {
    display: flex;
    flex-wrap: wrap;
    gap: 0 1rem;
  }
  .skills li {
    list-style: none;
  }
</style>
